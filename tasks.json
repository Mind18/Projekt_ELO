{
    "version": "2.0.0",
    "tasks":[
        {
            "type": "cppbuild",
            "label": "TEST C/C++: g++ build active file",
            "command": "/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "${workspaceFolder}/tests/*.cpp",
                "${workspaceFolder}/League.cpp",
                "${workspaceFolder}/Match.cpp",
                "${workspaceFolder}/Player.cpp",
                "${workspaceFolder}/Team.cpp",
                "-o",
                "${workspaceFolder}/tests/test"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Test build"
        }]
}